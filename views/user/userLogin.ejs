<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>

         <!-- ::::::::::::::Favicon icon::::::::::::::-->
        <link rel="shortcut icon" href="assets/images/favicon.ico" type="image/png">

        <!-- CSS -->
        <link rel="stylesheet" href="assets/css/stylelogin.css">
                
        <!-- Boxicons CSS -->
        <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
                        
    </head>
    <body>
        <div class="LogoText">
            <a href="/">
                <h1 >TRENDY</h1>
                <p><small>For Latest Fashion Trends</small></p>
            </a>    
         </div>
        
        <section class="container forms">
           
            <div class="form login">
                <div class="form-content">
                    <%  
                    if(typeof data !=="undefined"){
                        %>
                     <h5 id="dataMsg" style="color:rgb(0, 152, 20); margin-bottom: 20px; text-align: center;"><%= data %></h5>
                        <%
                      }
                 %>
                    <header>Login</header>
                    <form action="/login" method="post">
                        <div class="field input-field">
                            <input type="email" placeholder="Email" class="input" name="email" required>
                        </div>

                        <div class="field input-field">
                            <input type="password" placeholder="Password" class="password" name="password" required>
                            <i class='bx bx-hide eye-icon'></i>
                        </div>

                        <div class="form-link">
                            <a href="/forgetPassword" class="forgot-pass">Forgot password?</a>
                        </div>

                        <div class="field button-field">
                            <button type="submit">Login</button>
                        </div>
                        <%

                        if(typeof message !=="undefined"){
                            %>
                         <h5 id="messageId" style="color:red;"><%= message %></h5>
                            <%
                          }
                     %>
                    </form>

                    <div class="form-link">
                        <span>Don't have an account? <a href="/signup" >Signup</a></span>
                    </div>
                </div>

                <div class="line"></div>

                <!-- <div class="media-options">
                    <a href="#" class="field facebook">
                        <i class='bx bxl-facebook facebook-icon'></i>
                        <span>Login with Facebook</span>
                    </a>
                </div> -->

                <div class="media-options">
                    <a href="/auth/google" class="field google">
                        <img src="assets/images/google.png" alt="" class="google-img">
                        <span>Login with Google</span>
                    </a>
                </div>

            </div>
        </section>

        <!-- JavaScript -->
        <script src="assets/js/script.js"></script>

        <script>
             const message = document.getElementById("messageId");
             const dataMsg= document.getElementById("dataMsg")
             const messageTimout = setTimeout(() => {
                message.style.display = "none"; 
                dataMsg.style.display="none";
        }, 10000);
        </script>
    </body>
</html>